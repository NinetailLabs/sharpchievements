<Window
    x:Class="AchievementOverviewTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view1="clr-namespace:sebingel.sharpchievements.View;assembly=sebingel.sharpchievements.View"
    Title="MainWindow"
    Width="525"
    Height="350">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button
                Margin="5"
                HorizontalAlignment="Left"
                Click="ButtonBase_OnClick"
                Content="Unlock!" />
            <Button
                Margin="5"
                HorizontalAlignment="Left"
                Click="ButtonBase_OnClick2"
                Content="Unlock 2!" />
            <Button
                Margin="5"
                HorizontalAlignment="Left"
                Click="ButtonBase_OnClick3"
                Content="Unlock 3!" />
        </StackPanel>
        <view1:AchievementOverviewControl Name="AchievementOverviewControl" Grid.Row="1" />
    </Grid>

</Window>
