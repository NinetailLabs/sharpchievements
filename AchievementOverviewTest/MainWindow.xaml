<Window x:Class="AchievementOverviewTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:sebingel.sharpchievements.AchievementViews.View;assembly=sebingel.sharpchievements"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Unlock!" Click="ButtonBase_OnClick" HorizontalAlignment="Left" Margin="5" />
            <Button Content="Unlock 2!" Click="ButtonBase_OnClick2" HorizontalAlignment="Left" Margin="5" />
            <Button Content="Unlock 3!" Click="ButtonBase_OnClick3" HorizontalAlignment="Left" Margin="5" />
        </StackPanel>
        <view:AchievementOverviewControl Grid.Row="1" Name="AchievementOverviewControl"/>
    </Grid>

</Window>
